        fetch(form.action, {
          method: form.method,
          body: new FormData(form),
          headers: { 'Accept': 'application/json' }
        }).then(response => {
          if (response.ok) {
            formMessage.classList.remove('hidden');
            form.reset();
          } else {
            response.json().then(data => {
              alert(data.errors ? data.errors.map(err => err.message).join(", ") : "Oops! There was a problem.");
            }).catch(()=>alert("Oops! Problem submitting."));
          }
        }).catch(() => alert("Oops! There was a problem submitting the form."));
      });
    }

    /* ----------------------------
       Show More / Show Less toggle
       ---------------------------- */
    const toggleBtn = document.getElementById("toggle-projects");
    const hiddenProjects = document.getElementById("projects-hidden");
    if (toggleBtn && hiddenProjects) {
      toggleBtn.addEventListener("click", () => {
        const isHidden = hiddenProjects.classList.contains("hidden");
        hiddenProjects.classList.toggle("hidden");
        toggleBtn.textContent = isHidden ? "Show Less" : "Show More Projects";
        // smooth scroll to revealed content on show
        if (isHidden) {
          hiddenProjects.scrollIntoView({ behavior: 'smooth', block: 'start' });
        } else {
          // scroll back to projects section top
          document.getElementById('projects').scrollIntoView({ behavior: 'smooth', block: 'start' });
        }
      });
    }

    /* ----------------------------
       Unified Workflow Modal + Slideshow + Pager
       ---------------------------- */
    const workflowModal = document.getElementById("workflowModal");
    const modalImg = document.getElementById("modalImage");
    const prevBtn = document.getElementById("prevImage");
    const nextBtn = document.getElementById("nextImage");
    const closeModalBtn = document.getElementById("closeModal");
    const modalPager = document.getElementById("modalPager");
    const slideCounter = document.getElementById("slideCounter");

    let workflowImages = [];
    let currentIndex = 0;
    let autoPlayTimer = null;
    const autoPlayInterval = 5000;

    function buildPager() {
      modalPager.innerHTML = '';
      workflowImages.forEach((src, i) => {
        const dot = document.createElement('button');
        dot.type = 'button';
        dot.className = 'modal-dot';
        dot.setAttribute('aria-label', 'Go to slide ' + (i+1));
        // active styling handled below
        dot.addEventListener('click', () => {
          currentIndex = i;
          loadModalImage();
          resetAutoPlay();
        });
        modalPager.appendChild(dot);
      });
      updatePager();
    }

    function updatePager() {
      [...modalPager.children].forEach((dot, i) => {
        if (i === currentIndex) {
          dot.classList.add('active');
          dot.style.background = 'var(--brand-accent)';
          dot.style.opacity = '1';
        } else {
          dot.classList.remove('active');
          dot.style.background = '#d1d5db'; // tailwind gray-300
          dot.style.opacity = '0.45';
        }
      });
    }

    function openModal(images, index = 0) {
      if (!images || !images.length) return;
      workflowImages = images.slice(); // copy
      currentIndex = Math.min(Math.max(index, 0), workflowImages.length - 1);
      workflowModal.classList.remove('hidden');
      workflowModal.classList.add('flex');
      workflowModal.setAttribute('aria-hidden', 'false');
      document.documentElement.style.overflow = 'hidden';
      buildPager();
      loadModalImage();
      startAutoPlay();
      // focus trap start: focus close button
      closeModalBtn.focus();
    }

    function closeModal() {
      workflowModal.classList.add('hidden');
      workflowModal.classList.remove('flex');
      workflowModal.setAttribute('aria-hidden', 'true');
      document.documentElement.style.overflow = '';
      stopAutoPlay();
    }

    function loadModalImage() {
      if (!workflowImages || !workflowImages.length) return;
      modalImg.src = workflowImages[currentIndex];
      modalImg.alt = `Slide ${currentIndex+1} ‚Äî ${modalImg.alt || 'Workflow image'}`;
      slideCounter.textContent = `${currentIndex + 1} / ${workflowImages.length}`;
      updatePager();
      // preload next
      const pre = new Image();
      pre.src = workflowImages[(currentIndex + 1) % workflowImages.length];
    }

    function nextImageFunc() {
      if (!workflowImages.length) return;
      currentIndex = (currentIndex + 1) % workflowImages.length;
      loadModalImage();
    }

    function prevImageFunc() {
      if (!workflowImages.length) return;
      currentIndex = (currentIndex - 1 + workflowImages.length) % workflowImages.length;
      loadModalImage();
    }

    function startAutoPlay() {
      stopAutoPlay();
      autoPlayTimer = setInterval(() => {
        if (!workflowModal.classList.contains('hidden')) nextImageFunc();
      }, autoPlayInterval);
    }

    function stopAutoPlay() {
      if (autoPlayTimer) { clearInterval(autoPlayTimer); autoPlayTimer = null; }
    }

    function resetAutoPlay() {
      stopAutoPlay();
      startAutoPlay();
    }

    // open modal when "View Workflow" clicked
    document.querySelectorAll('.open-workflow').forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.preventDefault();
        const card = btn.closest('.project-card');
        let imgs = [];
        try { imgs = JSON.parse(card.getAttribute('data-images') || '[]'); } catch (err) { imgs = []; }
        // fallback: use the card image if data-images empty
        if (!imgs.length && card.querySelector('img')) imgs = [card.querySelector('img').src];
        openModal(imgs, 0);
      });
    });

    // keyboard interactions
    document.addEventListener('keydown', (e) => {
      if (workflowModal.classList.contains('hidden')) return;
      if (e.key === 'Escape') closeModal();
      if (e.key === 'ArrowLeft') prevImageFunc();
      if (e.key === 'ArrowRight') nextImageFunc();
    });

    // close buttons and overlay click to close
    if (closeModalBtn) closeModalBtn.addEventListener('click', closeModal);
    workflowModal.addEventListener('click', (e) => {
      // close only if clicking on the overlay (not inside inner content)
      if (e.target === workflowModal) closeModal();
    });

    // prev/next
    if (prevBtn) prevBtn.addEventListener('click', () => { prevImageFunc(); resetAutoPlay(); });
    if (nextBtn) nextBtn.addEventListener('click', () => { nextImageFunc(); resetAutoPlay(); });

    /* ----------------------------
       Image click => zoom (open modal at clicked image index)
       and pause slideshow to show static image
       ---------------------------- */
    document.querySelectorAll('.project-card img').forEach(img => {
      img.style.cursor = 'zoom-in';
      img.addEventListener('click', (e) => {
        const card = img.closest('.project-card');
        let imgs = [];
        try { imgs = JSON.parse(card.getAttribute('data-images') || '[]'); } catch (err) { imgs = []; }
        // if images array empty, use clicked src
        if (!imgs.length) imgs = [img.src];
        // find index if present
        const resolvedSrc = img.src;
        let idx = imgs.indexOf(resolvedSrc);
        if (idx === -1) idx = 0;
        openModal(imgs, idx);
        // ensure modalImage shows static image (slideshow is paused by openModal startAutoPlay; user clicking image implies static preference, so stop autoplay)
        stopAutoPlay();
      });
    });

    /* ----------------------------
       Admin link toggle if ?admin=1
       ---------------------------- */
    const showAdmin = new URLSearchParams(window.location.search).get('admin') === '1';
    if (showAdmin) {
      document.getElementById('admin-link')?.classList.remove('hidden');
      document.getElementById('admin-link-mobile')?.classList.remove('hidden');
    }
  });
  </script>

</body>
